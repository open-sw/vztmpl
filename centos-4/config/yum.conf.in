[main]
cachedir=@@MYTDIR@@/yum-cache/
# Ugly hack to make yum disregard /etc/yum.repos.d/*repo files
# from both the host system and from inside VPS
reposdir=/dev/null
# Fix for bug #78 - we do not want to install dummy,
# we want to upgrade it.
installonlypkgs=''

[centos@@OSVERSION@@-vz-addons]
name=OpenVZ add-ons for CentOS @@OSVERSION@@ - @@OSARCH@@
baseurl=file://@@MYTADDONSDIR@@/
enabled=1
gpgcheck=0

[centos@@OSVERSION@@-base]
name=CentOS @@OSVERSION@@ - @@OSARCH@@ - Base
baseurl=http://mirror.centos.org/centos/@@OSVERSION@@/os/@@OSARCH@@/
enabled=1
gpgcheck=1

[centos@@OSVERSION@@-updates-released]
name=CentOS @@OSVERSION@@ - @@OSARCH@@ - Released Updates
baseurl=http://mirror.centos.org/centos/@@OSVERSION@@/updates/@@OSARCH@@/
enabled=1
gpgcheck=1
