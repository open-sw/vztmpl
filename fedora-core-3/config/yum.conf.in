[main]
cachedir=@@MYTDIR@@/yum-cache/
# Ugly hack to make yum disregard /etc/yum.repos.d/*repo files
# from both the host system and from inside VPS
reposdir=/dev/null
# Fix for bug #78 - we do not want to install dummy,
# we want to upgrade it.
installonlypkgs=''

[fc@@OSVERSION@@-vz-addons]
name=OpenVZ add-ons for Fedora Core @@OSVERSION@@ - @@OSARCH@@
baseurl=file://@@MYTADDONSDIR@@/
enabled=1
gpgcheck=0

[fc@@OSVERSION@@-base]
name=Fedora Core @@OSVERSION@@ - @@OSARCH@@ - Base
#baseurl=http://download.fedora.redhat.com/pub/fedora/linux/core/@@OSVERSION@@/@@OSARCH@@/os/
mirrorlist=http://fedora.redhat.com/download/mirrors/fedora-core-@@OSVERSION@@
enabled=1
gpgcheck=1

[fc@@OSVERSION@@-updates-released]
name=Fedora Core @@OSVERSION@@ - @@OSARCH@@ - Released Updates
#baseurl=http://download.fedora.redhat.com/pub/fedora/linux/core/updates/@@OSVERSION@@/@@OSARCH@@/
mirrorlist=http://fedora.redhat.com/download/mirrors/updates-released-fc@@OSVERSION@@
enabled=1
gpgcheck=1
