%define osname		@@OSNAME@@

Name: vztmpl2-%{osname}
Version: 0.9.0
Release: 1
Summary: OpenVZ template metadata for %{osname}
License: GPL
Vendor: SWsoft
URL:	http://openvz.org/
Group: Applications/System
Source: %{name}.src.tar.bz2
BuildArch: noarch
BuildRoot: %{_tmppath}/%{name}-%{version}-root
BuildRequires: createrepo, rpm-build, sed, gawk
Requires: vzpkg2 >= 0.9.0
Requires: debootstrap
Conflicts: vzpkg

%description
OpenVZ template metadata for %{osname}

%prep
%setup -n %{osname} -q

%build
make

%install
make DESTDIR=%buildroot install

%files
%defattr(-, root, root)
%dir /vz/template/*/config
%dir /vz/template/*/*/*/*
/vz/template/*/config/*
/vz/template/*/*/*/*

%clean
test "x$RPM_BUILD_ROOT" != "x" && rm -rf $RPM_BUILD_ROOT

%post
# Remove yum-cache directory
rm -rf /vz/template/%{osname}/*/*/yum-cache
exit 0

%changelog
* Thu Sep  4 2008 Robert Nelson <robertn@the-nelsons.org>
  - initial packaging for Debian
